<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.khuza.classalert.view.dataInsert">

    <Spinner
        android:id="@+id/Days_spn"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Course_Name_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:entries="@array/Days" />

    <Spinner
        android:id="@+id/Time_spn"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Course_Name_et"
        android:layout_alignStart="@+id/Course_Name_et"
        android:layout_below="@+id/Days_spn"
        android:layout_marginTop="25dp"
        android:entries="@array/Times" />

    <EditText
        android:id="@+id/Course_Name_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="132dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Course Name" />

    <Button
        android:id="@+id/dataSaver_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Course_Name_et"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/Course_Name_et"
        android:layout_marginBottom="54dp"
        android:text="Save" />


</RelativeLayout>
